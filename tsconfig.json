{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@random-fixtures/core": ["packages/core/src"],
      "@random-fixtures/address": ["packages/address/src"],
      "@random-fixtures/ancient": ["packages/ancient/src"],
      "@random-fixtures/chuck-norris": ["packages/chuck-norris/src"]
    }
  },
  "include": ["packages/*/src"]
}
